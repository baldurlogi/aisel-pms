{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": ".",
    "noEmit": false,
    "allowImportingTsExtensions": false,
    "paths": {
      "libs/dtos/*": ["../../dist/libs/dtos/*"],
      "common/*": ["common/*"],
      "config/*": ["config/*"]
    }
  },
  "references": [{ "path": "../../libs/dtos" }],
  "exclude": ["**/*.spec.ts", "**/*.test.ts"],
  "include": ["src/**/*"]
}
