{
  "scripts": {
    "lint": "eslint \"**/*.{js,jsx,ts,tsx}\" --max-warnings=0",
    "format": "prettier . --check",
    "format:write": "prettier . --write",
    "prepare": "husky"
  },
  "packageManager": "pnpm@10.13.1",
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "pnpm lint --fix",
      "pnpm format:write"
    ]
  }
}
