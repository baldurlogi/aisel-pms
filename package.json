{
  "scripts": {
    "lint": "eslint \"**/*.{js,jsx,ts,tsx}\" --max-warnings=0",
    "format": "prettier . --check",
    "format:write": "prettier . --write",
    "prepare": "husky"
  },
  "packageManager": "pnpm@10.13.1",
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@tsconfig/node22": "^22.0.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "typescript": "^5.8.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "pnpm lint --fix",
      "pnpm format:write"
    ]
  }
}
